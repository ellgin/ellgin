    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    
    <style>
        /* --- CSS Variables for Easy Theming --- */
        :root {
            --bg-color: #ffffff;
            --text-main: #111111;
            --text-secondary: #666666;
            --accent-color: #000000; /* Minimalist Black */
            --spacing-section: 80px;
            --spacing-item: 40px;
            --font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            --container-width: 720px;
        }

        /* --- Global Reset & Typography --- */
        * { box-sizing: border-box; margin: 0; padding: 0; }
        
        body {
            font-family: var(--font-family);
            background-color: var(--bg-color);
            color: var(--text-main);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            padding: 60px 20px;
        }

        /* --- Layout --- */
        .container {
            max-width: var(--container-width);
            margin: 0 auto;
        }

        /* --- Typography Hierarchy --- */
        h1 {
            font-size: 24px;
            font-weight: 600;
            letter-spacing: -0.02em;
            margin-bottom: 8px;
        }

        h2 {
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: var(--text-secondary);
            font-weight: 500;
            margin-bottom: 24px;
            border-bottom: 1px solid #eee;
            padding-bottom: 8px;
        }

        h3 {
            font-size: 18px;
            font-weight: 500;
            margin-bottom: 4px;
        }

        .role {
            font-size: 18px;
            color: var(--text-secondary);
            margin-bottom: 24px;
            font-weight: 400;
        }

        p { margin-bottom: 16px; color: #333; }
        
        /* --- Links & Contacts --- */
        a {
            color: var(--text-main);
            text-decoration: none;
            border-bottom: 1px solid #ddd;
            transition: border-color 0.2s;
        }
        a:hover { border-bottom-color: #000; }

        .contacts {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
            font-size: 15px;
            margin-bottom: 60px;
        }
        
        .contact-item::after {
            content: "•";
            margin-left: 16px;
            color: #ddd;
        }
        .contact-item:last-child::after { content: ""; }

        /* --- Sections --- */
        section { margin-bottom: var(--spacing-section); }

        /* --- Skills Grid --- */
        .skills-grid {
            display: grid;
            grid-template-columns: 120px 1fr;
            gap: 16px;
            margin-bottom: 16px;
        }
        .skill-category {
            font-size: 14px;
            color: var(--text-secondary);
            font-weight: 500;
        }
        
        /* --- Experience & Projects --- */
        .item { margin-bottom: var(--spacing-item); }
        
        .item-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin-bottom: 8px;
            flex-wrap: wrap;
        }
        
        .date {
            font-size: 14px;
            color: var(--text-secondary);
            font-feature-settings: "tnum" on, "onum" on;
        }

        .meta {
            font-size: 14px;
            color: var(--text-secondary);
            margin-bottom: 12px;
            display: block;
        }

        /* --- Lists --- */
        ul {
            list-style: none;
            padding-left: 0;
        }
        li {
            position: relative;
            padding-left: 20px;
            margin-bottom: 8px;
            font-size: 15px;
        }
        li::before {
            content: "—";
            position: absolute;
            left: 0;
            color: #ccc;
        }

        /* --- Print Styles --- */
        @media print {
            body { padding: 0; font-size: 11pt; }
            section { margin-bottom: 30px; }
            a { text-decoration: none; border: none; color: #000; }
        }

        /* --- Mobile --- */
        @media (max-width: 600px) {
            .skills-grid { grid-template-columns: 1fr; gap: 4px; margin-bottom: 24px; }
            .item-header { flex-direction: column; }
            .date { margin-bottom: 4px; }
        }
    </style>
</head>
